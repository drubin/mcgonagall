{
  "name": "mcgonagall",
  "version": "1.1.1",
  "description": "transfigures toml cluster and service specifications into Kubernetes manifests",
  "main": "src/index.js",
  "bin": {
    "mcgonagall": "./bin/mcgonagall.js"
  },
  "scripts": {
    "pretest": "standard",
    "test": "./node_modules/mocha/bin/mocha ./spec/*.spec.js",
    "coverage": "nyc npm test",
    "continuous": "./node_modules/mocha/bin/mocha spec/*.spec.js -w",
    "release": "standard-version",
    "standard": "standard --fix"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/npm/mcgonagall.git"
  },
  "keywords": [
    "kubernetes",
    "service",
    "specification"
  ],
  "author": "Alex Robson",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/npm/mcgonagall/issues"
  },
  "homepage": "https://github.com/npm/mcgonagall#readme",
  "dependencies": {
    "bluebird": "^3.5.1",
    "globulesce": "^1.0.0",
    "inquirer": "^3.3.0",
    "joi": "^10.6.0",
    "js-yaml": "^3.10.0",
    "mkdirp": "^0.5.1",
    "simple-git": "^1.80.1",
    "tar": "^4.0.1",
    "toml-j0.4": "^1.1.1",
    "yargs": "^9.0.1"
  },
  "devDependencies": {
    "chai": "^4.1.1",
    "chai-as-promised": "^7.1.1",
    "chalk": "^2.1.0",
    "coveralls": "^2.13.1",
    "diff": "^3.4.0",
    "folder-hash": "^1.1.1",
    "mocha": "^3.5.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^11.1.0",
    "rimraf": "^2.6.2",
    "sinon": "^3.2.1",
    "sinon-chai": "^2.13.0",
    "standard": "^10.0.3",
    "standard-version": "^4.2.0"
  },
  "standard": {
    "env": [
      "mocha"
    ]
  }
}
